{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "plugins": ["prettier"],
  "extends": ["airbnb-base", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "prettier/prettier": ["error"],
    "import/no-extraneous-dependencies": "off",
    "no-console": "off",
    "import/extensions": "off",
    "no-unused-expressions": "off"
  },
  "globals": {
    "hre": "readonly",
    "ethers": "readonly",
    "describe": "readonly",
    "before": "readonly",
    "it": "readonly",
    "task": "readonly"
  }
}
